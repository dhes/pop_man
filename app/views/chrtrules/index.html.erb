<h1>EMR Reminders</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Comment</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @chrtrules.each do |chrtrule| %>
      <tr>
        <td><%#= chrtrule.name %></td>
        <td><%#= chrtrule.rulecomment %></td>
        <td><%= chrtrule[0] %></td>
        <td><%= chrtrule[1] %></td>
        <td><%#= link_to 'Show', chrtrule %></td>
        <td><%#= link_to 'Edit', edit_chrtrule_path(chrtrule) %></td>
        <td><%#= link_to 'Destroy', chrtrule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


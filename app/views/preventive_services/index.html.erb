<h1>Preventive Services</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Source</th>
      <th>Name</th>
      <th>Rule</th>
      <th>In scope</th>
      <th>Implemented</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @preventive_services.each do |preventive_service| %>
      <tr>
        <td><%= preventive_service.source %></td>
        <td><%= preventive_service.name %></td>
        <td><%= preventive_service.rule %></td>
        <td><%= preventive_service.in_scope==true ? "Y" : "" %></td>
        <td><%= preventive_service.implemented==true ? "Y" :   "" %></td>
        <td><%= link_to 'Show', preventive_service %></td>
        <td><%= link_to 'Edit', edit_preventive_service_path(preventive_service) %></td>
        <td><%= link_to 'Destroy', preventive_service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

